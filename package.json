{
  "name": "multiverse",
  "version": "0.0.1",
  "description": "A furystack-based microservice and microfrontend collection",
  "main": "services/auth/src/index.ts",
  "repository": "https://github.com/furystack/multiverse.git",
  "author": "Gallay Lajos <gallay.lajos@gmail.com>",
  "license": "GPL-2.0-only",
  "private": true,
  "workspaces": {
    "packages": [
      "frontends/*",
      "services/*",
      "common/*",
      "lib/*"
    ]
  },
  "dependencies": {
    "tslib": "^1.10.0"
  },
  "optionalDependencies": {
    "@cypress/webpack-preprocessor": "^5.1.2",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.18.0",
    "concurrently": "^5.1.0",
    "cypress": "^4.0.1",
    "cypress-plugin-snapshots": "^1.2.9",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-cypress": "^2.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^24.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^4.0.6",
    "lint-staged": "^10.0.3",
    "prettier": "^2.0.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.2",
    "rimraf": "^3.0.1",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --ext .tsx,.ts --cache --fix",
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "build:services": "tsc -b",
    "build:frontends": "yarn workspace @frontend/core build",
    "build": "yarn build:services && yarn build:frontends",
    "start:watch": "tsc -b common && tsc -b services && concurrently --kill-others \"tsc -b --watch\" \"yarn workspace @service/auth start:watch\" \"yarn workspace @service/diag start:watch\" \"yarn workspace xpense-service start:watch\" \"yarn startFrontend\"",
    "test:cypress": "yarn workspace @service/auth seed && concurrently --kill-others \"yarn start\" \"yarn cypress run\" --success first ",
    "start": "concurrently --kill-others \"yarn startAuth\" \"yarn startDiag\" \"yarn startXpense\" \"yarn startFrontend\"",
    "startAuth": "yarn workspace @service/auth start",
    "startDiag": "yarn workspace @service/diag start",
    "startXpense": "yarn workspace xpense-service start",
    "startFrontend": "yarn workspace @frontend/core start",
    "clean": "rimraf services/**/dist frontends/**/dist frontends/**/bundle common/**/dist **/tsconfig.tsbuildinfo tsconfig.tsbuildinfo",
    "lint": "eslint . --ext .tsx,.ts --cache",
    "seed": "yarn workspace @service/auth seed",
    "docker:base": "docker build . --file ./base.Dockerfile --tag furystack/multiverse-base:latest",
    "docker:auth": "docker build . --file ./auth.Dockerfile --tag furystack/multiverse-auth:latest",
    "docker:diag": "docker build . --file ./diag.Dockerfile --tag furystack/multiverse-diag:latest",
    "dockerize": "yarn docker:base && yarn docker:auth && yarn docker:diag"
  }
}
