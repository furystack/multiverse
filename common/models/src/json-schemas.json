{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "AppShortcutWidget": {
      "additionalProperties": false,
      "properties": {
        "appName": {
          "enum": [
            "Profile",
            "Xpense",
            "Organizations",
            "Feature Switches",
            "Users",
            "Diagnostics",
            "System Logs",
            "Movies"
          ],
          "type": "string"
        },
        "type": {
          "enum": [
            "app-shortcut"
          ],
          "type": "string"
        }
      },
      "required": [
        "appName",
        "type"
      ],
      "type": "object"
    },
    "Dashboard": {
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "widgets": {
          "items": {
            "$ref": "#/definitions/Widget"
          },
          "type": "array"
        }
      },
      "required": [
        "name",
        "description",
        "widgets"
      ],
      "type": "object"
    },
    "HtmlWidget": {
      "additionalProperties": false,
      "properties": {
        "content": {
          "type": "string"
        },
        "type": {
          "enum": [
            "html"
          ],
          "type": "string"
        }
      },
      "required": [
        "content",
        "type"
      ],
      "type": "object"
    },
    "IconUrlWidget": {
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "enum": [
            "icon-url-widget"
          ],
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "required": [
        "icon",
        "name",
        "type",
        "url"
      ],
      "type": "object"
    },
    "MarkdownWidget": {
      "additionalProperties": false,
      "properties": {
        "content": {
          "type": "string"
        },
        "type": {
          "enum": [
            "markdown"
          ],
          "type": "string"
        }
      },
      "required": [
        "content",
        "type"
      ],
      "type": "object"
    },
    "UserSettings": {
      "additionalProperties": false,
      "properties": {
        "dashboard": {
          "$ref": "#/definitions/Dashboard"
        },
        "theme": {
          "enum": [
            "light",
            "dark"
          ],
          "type": "string"
        }
      },
      "required": [
        "theme",
        "dashboard"
      ],
      "type": "object"
    },
    "Widget": {
      "anyOf": [
        {
          "$ref": "#/definitions/AppShortcutWidget"
        },
        {
          "$ref": "#/definitions/HtmlWidget"
        },
        {
          "$ref": "#/definitions/IconUrlWidget"
        },
        {
          "$ref": "#/definitions/MarkdownWidget"
        }
      ]
    },
    "WidgetBase<\"app-shortcut\">": {
      "additionalProperties": false,
      "properties": {
        "type": {
          "enum": [
            "app-shortcut"
          ],
          "type": "string"
        }
      },
      "required": [
        "type"
      ],
      "type": "object"
    },
    "WidgetBase<\"html\">": {
      "additionalProperties": false,
      "properties": {
        "type": {
          "enum": [
            "html"
          ],
          "type": "string"
        }
      },
      "required": [
        "type"
      ],
      "type": "object"
    },
    "WidgetBase<\"icon-url-widget\">": {
      "additionalProperties": false,
      "properties": {
        "type": {
          "enum": [
            "icon-url-widget"
          ],
          "type": "string"
        }
      },
      "required": [
        "type"
      ],
      "type": "object"
    },
    "WidgetBase<\"markdown\">": {
      "additionalProperties": false,
      "properties": {
        "type": {
          "enum": [
            "markdown"
          ],
          "type": "string"
        }
      },
      "required": [
        "type"
      ],
      "type": "object"
    }
  }
}